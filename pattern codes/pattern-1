# To print the following pattern
'''
     1
    21
   321
  4321
 54321
'''
def print_pattern(n):
    for i in range(n):
        # Print leading spaces
        for j in range(n - i - 1):
            print(' ', end='')
        # Print decreasing numbers
        for k in range(i + 1, 0, -1):
            print(k, end='')
        # Move to the next line
        print()

# Set the number of rows
num_rows = 5
print_pattern(num_rows)
